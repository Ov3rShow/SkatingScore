<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sartore.matteo.skatingscore">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/icon512px"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon512pxround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:versionCode="8"
        android:versionName="1.8">
        <activity
            android:name=".IndexActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewCompetitionActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".NewAthleteActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SetScoresActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".AppTourActivity"
            android:label="@string/title_activity_app_tour"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SettingsActivity"/>
    </application>

</manifest>